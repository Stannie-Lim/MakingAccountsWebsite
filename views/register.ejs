<% include partials/header %>
<link rel="stylesheet" href="register.css">

<title>Register for food pantry</title>

    <div class="register">
        <h1>Sign Up</h1>
        <br>
        <!-- This second div class puts the white box in the middle of the screen -->
        <a href="/login">Already have an account? Click here to log in!</a>
        <div class ="center container mid">
           <form action="/register" method="POST">
                <label for="fname">First Name:</label>
                <br>
                <input type="text" class="form-control" name="fname" pattern="[A-Za-z]{}" title="Can contain only letters" required>
                <br>

                <label for="lname">Last Name: </label>
                <br>
                <input type="text" class="form-control" name="lname" pattern="[A-Za-z]{}" title="Can contain only letters" required>
                <br>

                <label for="birthday">Date of Birth: </label>
                <br>
                <input type="date" class="form-control" name="birthday" required>
                <br>

                <label for="address">Address: </label> <br>
                <input type="text" class="form-control" name="address" required>
                <br>

                <label for="address_2">Address 2: </label><br>
                <input type="text" class="form-control" name="address_2">
                <br>

                <label for="zipcode">Zip code:</label> <br>
                <input type="text" class="form-control" name="zipcode" pattern="[0-9]{5}" title="Enter a 5 digit zipcode" required>
                <br>

                <label for="username">Username:</label>
                <br>
                <input type="text" class="form-control" name="username" pattern=".{8,15}" title="Username must be between 8 and 15 characters" required>
                <br>

                <label for="pword">Password</label> <br>
                <input type="password" class="form-control" name="password" pattern="{.6}" title="Requires 6 or more characters" required>
                <br>

                <!-- Email needs to contain @ and .com but cannot contain other symbols (!#$%^&*) -->
               <label for="email">Email:</label>
               <br>
               <input type="email" class="form-group form-control" name="email" pattern="[A-Za-z]{1,15}{@.}" title="Can contain only letters and numbers" required>
               <br>
               <button class="btn btn-primary nextbutton"><span>Submit</span></button>
                <br><br>
           </form>
         </div>
         <br><br>
      </div>


<% include partials/footer %>


